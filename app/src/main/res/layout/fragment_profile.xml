<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="whoyouquote.yero007.com.whoyouquote.mainActivityFragments.ProfileFragment">


    <ImageView
        android:id="@+id/iv_profile_avatar"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true" />

    <whoyouquote.yero007.com.whoyouquote.views.WYQTextViewBold
        android:id="@+id/tv_profile_name"
        style="@style/WYQTextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_profile_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/activity_margin_end"
        android:layout_marginStart="@dimen/activity_margin_start" />

</RelativeLayout>
