<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="whoyouquote.yero007.com.whoyouquote.fragments.answers.ListAnswerFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_answer_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/answer_card_margin_end"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/answer_card_margin_start"
        app:cardBackgroundColor="@color/colorAccent" >

        <ListView
            android:id="@+id/lv_list_answer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>
