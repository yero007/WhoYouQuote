<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_question_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="@dimen/question_layout_card_margin_end"
        android:layout_marginStart="@dimen/question_layout_card_margin_start"
        android:minHeight="64dp"
        android:elevation="4dp"

        android:layout_marginTop="32dp">

            <whoyouquote.yero007.com.whoyouquote.views.WYQTextViewRegular
                android:id="@+id/textViewQuote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="32dp"
                android:textColor="@color/textColorPrimary" />
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_question_validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_question_card"
        android:layout_marginTop="-64dp"
        android:layout_marginEnd="16dp"
        app:fabSize="normal"
        app:backgroundTint="@color/colorAccent"
        android:src="@drawable/ic_done"
        android:layout_alignEnd="@+id/cv_question_card" />
</RelativeLayout>