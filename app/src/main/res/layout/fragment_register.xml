<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <whoyouquote.yero007.com.whoyouquote.views.WYQTextViewRegular
        android:id="@+id/tv_register_header"
        style="@style/WYQTextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_margin_end"
        android:layout_marginStart="@dimen/activity_margin_start"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/register_choose_username" />

    <whoyouquote.yero007.com.whoyouquote.views.WYQEditText
        android:id="@+id/et_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_register_header"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_margin_end"
        android:layout_marginStart="@dimen/activity_margin_start"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="@string/register_username_hint"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textColorHint="@color/hint_color" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_register_avatars"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_register_register"
        android:layout_below="@+id/et_register_name" />

    <whoyouquote.yero007.com.whoyouquote.views.WYQMainButton
        android:id="@+id/btn_register_register"
        style="@style/WYQMainButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="@string/register_register"
        android:textAlignment="center"
        android:textAllCaps="false" />

</RelativeLayout>
